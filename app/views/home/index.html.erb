<div ng-app="">

<div ng-controller="CreateEventController">
  <input type="text" ng-model="event.name"/>
        
  <table border="1">
    <tr>
      <th>Segunda</th>
      <th>Terça</th>
      <th>Quarta</th>
      <th>Quinta</th>
      <th>Sexta</th>
      <th>Sábado</th>
      <th>Domingo</th>
    </tr>
    <tr ng-repeat="i in [1,2,3,4,5]">
      <td ng-click="addEvent()" ng-repeat="j in [1,2,3,4,5,6,7]">
        <span> {{ i*j }} </span>
          {{event.name}}
      </td>
    </tr>
  </table>
</div>
</div>

<div ng-view=""></div>